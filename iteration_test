import time

number = 0

while number < 50:
    for n in range(1):
        number += 5
    print(number)
    time.sleep(.2)

while number < 100:
    for n in range(1):
        number += 10
    print(number)
    time.sleep(.2)

while number < 500:
    for n in range(1):
        number += 100
    print(number)
    time.sleep(.2)

while number < 1000:
    for n in range(1):
        number += 500
    print(number)
    time.sleep(.2)

while number < 5000:
    for n in range(1):
        number += 1000
    print(number)
    time.sleep(.2)
